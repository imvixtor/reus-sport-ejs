<%- include('partials/start') %>
<%- include('partials/nav') %>

<section class="py-5">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-xl-6 text-center mx-auto">
        <p class="fw-bold text-success mb-2">Xác minh Email</p>
        <h2 class="fw-bold">Nhập mã OTP của bạn</h2>
        <p class="text-muted">Mã OTP đã được gửi đến email của bạn, vui lòng kiểm tra hộp thư.</p>
      </div>
    </div>
    <div class="row d-flex justify-content-center">
      <div class="col-md-6 col-xl-4">
        <div class="card">
          <div class="card-body text-center d-flex flex-column align-items-center">
            <form method="post" action="/auth/verify-otp" class="w-100">
              <div class="mb-3">
                <input class="form-control" type="text" name="otp" placeholder="Nhập mã OTP" required>
              </div>
              <div class="mb-3">
                <button class="btn btn-primary shadow d-block w-100" type="submit">Xác nhận</button>
              </div>
            </form>
            <% if (error) { %>
            <div class="alert alert-danger" role="alert">
              <strong>Lỗi!</strong> <%= error %>
            </div>
            <% } %>
            <p class="text-muted">Không nhận được mã OTP?&nbsp;<a href="/auth/resend-otp">Gửi lại</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
<%- include('partials/end') %>